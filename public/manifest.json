{
  "manifest_version": 2,
  "name": "No Soccer Blocker",
  "description": "__MSG_appDesc__",
  "version": "1.0",
  "default_locale": "de",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon_128x128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ]
}
